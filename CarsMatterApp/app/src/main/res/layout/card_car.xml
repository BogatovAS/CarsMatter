<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refill_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDark">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="4"
                    android:paddingStart="10dp"
                    android:textColor="@android:color/white"
                    android:text="МОДЕЛЬ"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/refill_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@color/colorPrimary">
                <ImageView
                    android:id="@+id/car_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@android:color/white"/>
                <TextView
                    android:id="@+id/car_model_name"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:text="Kia Rio"/>
                <TextView
                    android:id="@+id/car_body_type"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:text="Хэтчбек"/>
                <TextView
                    android:id="@+id/car_manufacture_dates"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:text="c 2000 до в производстве"/>
                <TextView
                    android:id="@+id/car_prices"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:text="200000 руб - 800000 руб"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                    android:id="@+id/car_avito_uri"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_style"
                    android:textColor="@android:color/white"
                    android:text="Посмотреть на Авито"/>
                    <ImageButton
                        android:id="@+id/car_add_to_favorite_button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_style"
                        android:tint="@color/white"
                        android:src="@drawable/ic_favorite_border_black_24dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>